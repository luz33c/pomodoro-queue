{
  "$schema": "https://biomejs.dev/schemas/2.2.0/schema.json",
  "files": {
    "ignoreUnknown": false,
    "includes": [
      "**",
      "!**/.next",
      "!**/dist",
      "!**/.turbo",
      "!**/dev-dist",
      "!**/.zed",
      "!**/.vscode",
      "!**/routeTree.gen.ts",
      "!**/src-tauri",
      "!**/.nuxt",
      "!bts.jsonc",
      "!**/.expo",
      "!**/.wrangler",
      "!**/wrangler.jsonc",
      "!**/.source"
    ]
  },
  "extends": ["ultracite"],
  "javascript": {
    "globals": ["chrome"]
  },
  "assist": {
    "actions": {
      "source": {
        "useSortedAttributes": "off"
      }
    }
  },
  "linter": {
    "rules": {
      "a11y": {
        "useValidAnchor": "off",
        "noLabelWithoutControl": "off"
      },
      "suspicious": {
        "useAwait": "off",
        "noConsole": "off"
      },
      "style": {
        "useBlockStatements": "off",
        "noNestedTernary": "off",
        "noNonNullAssertion": "off"
      },
      "performance": {
        "noNamespaceImport": "off"
      },
      "nursery": {
        "useSortedClasses": "off",
        "noUnnecessaryConditions": "off"
      },
      "correctness": {
        "noUnusedImports": "off"
      },
      "complexity": {}
    }
  }
}
