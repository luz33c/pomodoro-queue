{
  "$schema": "https://biomejs.dev/schemas/2.2.2/schema.json",
  "javascript": {
    "globals": ["chrome"]
  },
  "files": {
    "ignoreUnknown": false,
    "includes": [
      "**",
      "!apps/vif",
      "!apps/native",
      "!**/.next",
      "!**/dist",
      "!**/.turbo",
      "!**/dev-dist",
      "!**/.zed",
      "!**/.vscode",
      "!**/routeTree.gen.ts",
      "!**/src-tauri",
      "!**/.nuxt",
      "!bts.jsonc",
      "!**/.expo",
      "!**/.wrangler",
      "!**/.alchemy",
      "!**/wrangler.jsonc",
      "!**/.source",
      "!**/.conductor",
      "!packages/backend/convex/_generated"
    ]
  },
  "extends": ["ultracite"],
  "json": {
    "parser": {
      "allowComments": true,
      "allowTrailingCommas": true
    }
  },
  "linter": {
    "rules": {
      "nursery": {
        "useConsistentTypeDefinitions": "off",
        "useSortedClasses": "off",
        "noUnnecessaryConditions": "off",
        "noShadow": "warn"
      },
      "suspicious": {
        "useAwait": "off",
        "noConsole": "off",
        "noUnknownAtRules": "off",
        "noArrayIndexKey": "warn"
      },
      "style": {
        "useFilenamingConvention": {
          "level": "warn",
          "options": {
            "requireAscii": true,
            "filenameCases": ["kebab-case", "PascalCase", "camelCase"]
          }
        },
        "useConsistentBuiltinInstantiation": "warn",
        "useBlockStatements": "off",
        "noMagicNumbers": "off",
        "noNegationElse": "off",
        "noNonNullAssertion": "off",
        "noNestedTernary": "off"
      },
      "correctness": {
        "noUnusedImports": "off",
        "noUnusedVariables": "off"
      },
      "performance": {
        "noNamespaceImport": "off"
      },
      "a11y": {
        "useButtonType": "off"
      },
      "complexity": {
        "useSimplifiedLogicExpression": "off",
        "noExcessiveCognitiveComplexity": "off",
        "useOptionalChain": "off"
      }
    }
  },
  "assist": {
    "actions": {
      "source": {
        "useSortedAttributes": "off"
      }
    }
  }
}
