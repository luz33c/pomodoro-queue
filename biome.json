{
  "$schema": "https://biomejs.dev/schemas/2.2.2/schema.json",
  "javascript": {
    "globals": ["chrome"],
    "formatter": {
      "semicolons": "asNeeded"
    }
  },
  "files": {
    "ignoreUnknown": false,
    "includes": [
      "**",
      "!**/.next",
      "!**/dist",
      "!**/.turbo",
      "!**/dev-dist",
      "!**/.zed",
      "!**/.vscode",
      "!**/routeTree.gen.ts",
      "!**/src-tauri",
      "!**/.nuxt",
      "!bts.jsonc",
      "!**/.expo",
      "!**/.wrangler",
      "!**/.alchemy",
      "!**/wrangler.jsonc",
      "!**/.source",
      "!**/.conductor"
    ]
  },
  "extends": ["ultracite"],
  "linter": {
    "rules": {
      "nursery": {
        "useConsistentTypeDefinitions": "off",
        "useSortedClasses": "off",
        "noUnnecessaryConditions": "off"
      },
      "suspicious": {
        "useAwait": "off",
        "noConsole": "off"
      },
      "style": {
        "useBlockStatements": "off",
        "noMagicNumbers": "off",
        "noNegationElse": "off",
        "noNonNullAssertion": "off",
        "noNestedTernary": "off"
      },
      "correctness": {
        "noUnusedImports": "warn",
        "noUnusedVariables": "off"
      },
      "a11y": {
        "useButtonType": "off"
      },
      "complexity": {
        "useSimplifiedLogicExpression": "off",
        "noExcessiveCognitiveComplexity": "off",
        "useOptionalChain": "off"
      }
    }
  },
  "assist": {
    "actions": {
      "source": {
        "useSortedAttributes": "off"
      }
    }
  }
}
